<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="helloworld" class="net.wls.learn.spring.events.HelloWorld">
        <property name="message" value="HelloWorld"/>
    </bean>

    <bean id="contextStartHandler" class="net.wls.learn.spring.events.ContextStartHandler"/>
    <bean id="contextStopHandler" class="net.wls.learn.spring.events.ContextStopHandler"/>

</beans>